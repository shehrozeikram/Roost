                  <label for="datetime">Date To</label>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <%= form.select :rooms, [["Package 1", "1"], ["Package 2", "2"], ["Package 3", "3"]], {}, {class: "form-select bg-transparent"} %>
