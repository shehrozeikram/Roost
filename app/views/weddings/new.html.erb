          <%= form_with model: @wedding do |form| %>
            <div class="row g-3">
              <div class="col-md-6">
                <div class="form-floating">
                  <%= form.text_field :name , :class => 'form-control bg-transparent', :id => 'name', :placeholder => 'Your Name' %>
                  <label for="name">Your Name</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <%= form.text_field :email , :class => 'form-control bg-transparent', :id => 'email', :placeholder => 'Your Email' %>
                  <label for="email">Your Email</label>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-floating">
                  <%= form.text_field :phone_number , :class => 'form-control bg-transparent', :id => 'phone_number', :placeholder => 'Your PhoneNumber' %>
